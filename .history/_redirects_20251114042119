# Remove HTTrack artifacts from URLs
/index.html                                 /dubailegalcheck.ae/index.html     301
/hts-cache/*                                /dubailegalcheck.ae/index.html     404
/cookies.txt                                /dubailegalcheck.ae/index.html     404
/hts-log.txt                                /dubailegalcheck.ae/index.html     404

